{{!-- Adding HTML template --}}
<h1>Burgers!!</h1>
<div class="burgerImage">
<img src="assets/images/burger.png" alt="BurgerTime">
</div>
<h2>Burgers that still need devouring:</h2>

<ul>
  <ul>
    {{#each burgers}}
    {{#unless devoured}}
    <li>
    {{name}}
    <button class="change-devour" data-id="{{id}}">
      Devour That Burg!
    </button>
    </li>
    {{/unless}}
    {{/each}}
  </ul>

</ul>

<h2>Burgers that have been devoured:</h2>

<ul>
  {{#each burgers}}
  {{#if devoured}}
  <li>
  {{name}}
  <button class="delete-btn" data-id="{{id}}">
    Delete!
  </button>
  </li>
  {{/if}}
  {{/each}}
</ul>

<h2>Add a burger:</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burg">Burger Name:</label>
    <input type="text" id="burg" name="name">
  </div>

  <button type="submit" class="submit">Add Burger</button>




</form>